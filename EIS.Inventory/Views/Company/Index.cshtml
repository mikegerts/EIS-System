@model StaticPagedList<EIS.Inventory.Core.ViewModels.CompanyListDto>

@{
    ViewBag.Title = "Companies";
    ViewBag.ActiveMenu = "companies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper" style="min-height:349px;">
    <section class="content-header">
        <h1>Company <small>List</small></h1>
        <ol class="breadcrumb">
            <li><a href="@Html.Raw(Url.Action("index", "home"))"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#vendor_products">Companies</a></li>
            <li><a class="active">List</a></li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-md-5">
                <div style="margin: 0 0 10px">
                    @Html.ActionLink("Create New Company", "create", null, new { @class = "btn btn-info btn-sm", @data_toggle = "tooltip", @data_original_title = "Create new company" })                    
                </div>
            </div>
            <div class="col-md-4">
                <div class="alert-warning" id="msgStatus" style="display:none;padding: 5px; border-radius: 5px"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header"></div>
                    <div class="box-body">
                        <div id="loadingDiv" style="display:none" class="loading-gif"></div>
                        <div id="model_list_container">
                            @{ Html.RenderPartial("_PagedCompanies", Model); }
                        </div>
                    </div>
                    <div class="box-footer">

                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
@{ Html.RenderPartial("_CompanyDialog");}

@section Scripts {
@{Html.RegisterMvcPagerScriptResource();}
<link href="@Url.Content("~/content/css/iCheck/all.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/scripts/plugins/icheck/icheck.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/scripts/jquery.confirm.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/scripts/models/company.js")" type="text/javascript"></script>

<script type="text/javascript">
    var DELETE_COMPANY_URL = "@Html.Raw(Url.Action("_deletecompany"))"
    function loadPagedDataComplete() {

    }
</script>
}