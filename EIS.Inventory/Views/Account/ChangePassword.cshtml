@model EIS.Inventory.Models.ChangePasswordViewModel

@{
    ViewBag.Title = "Change Password";
    ViewBag.ActiveMenu = "users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper" style="min-height: 657px;">
    <section class="content-header">
        <h1>Change Password <small>Change user's password</small></h1>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-info">
                    <div class="box-header">
                    </div>
                    @using (Html.BeginForm())
                    {
                        <div class="box-body">
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                                @Html.HiddenFor(model => model.UserName)
                                @Html.HiddenFor(model => model.OldPassword)
                                @Html.HiddenFor(model => model.IsMyProfile)

                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Username</label>
                                    <div class="col-sm-6">
                                        <p class="form-control-static">@Model.UserName</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="NewPassword">New Password </label>
                                    <div class="col-sm-6">
                                        @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control", @placeholder = "New password", @required = "required" })
                                        @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="ConfirmPassword">Confirm Password </label>
                                    <div class="col-sm-6">
                                        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm password", @required = "required" })
                                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="box-footer clearfix">
                            <div class="form-group">
                                <label class="col-sm-3"></label>
                                <div class="col-sm-6">
                                    <button class="btn btn-danger" type="submit">Change Password</button>&nbsp;
                                    @Html.ActionLink("Cancel", "index", "home", null, new { @class = "btn btn-default" })
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</divclass="content-wrapper">