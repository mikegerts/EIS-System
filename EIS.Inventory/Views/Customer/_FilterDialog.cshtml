
<div style="display:none;" class="modal fade" id="FilterDialog" role="dialog" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Filter Customer</h4>
            </div>
            @using (Html.BeginForm("index", "customer", FormMethod.Get, new { @class = "form-horizontal", @role = "form", @id = "filterForm" }))
            {
                <div class="modal-body" id="edit-form">
                    <input type="hidden" id="pageSize" name="pageSize" value="@Model.PageSize" />
                    <div class="form-group">
                        <label class="control-label col-md-4" for="ProductGroupId">Saved Search Filters</label>
                        <div class="col-md-4">
                            @Html.DropDownList("SearchFilterId", (IEnumerable<SelectListItem>)ViewBag.SavedSearchFiltersList, "-- Select Saved Filter --", new { @class = "form-control", @onchange = "javascript:GetFilter(this.value);" })
                            <a id="deletefilter" href="#" onclick="DeleteSavedFilter()" style="display:none;">Delete Filter</a>
                        </div>
                        <div class="col-md-4">
                            <input id="filterName" type="text" class="form-control" placeholder="Enter filter name for save" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4" for="SearchString">Keyword</label>
                        <div class="col-md-8">
                            <input class="form-control" id="SearchString" name="SearchString" value="@ViewBag.SearchString" placeholder="Enter keyword" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4" for="CustomerNumber">Customer Number</label>
                        <div class="col-md-8">
                            <input class="form-control" id="CustomerNumber" name="CustomerNumber" value="@ViewBag.CustomerNumber" placeholder="Enter CustomerNumber" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4" for="CompanyName">Company Name</label>
                        <div class="col-md-8">
                            <input class="form-control" id="CompanyName" name="CompanyName" value="@ViewBag.CompanyName" placeholder="Enter CompanyName" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4" for="CustomerName">Customer Name</label>
                        <div class="col-md-8">
                            <input class="form-control" id="CustomerName" name="CustomerName" value="@ViewBag.CustomerName" placeholder="Enter CustomerName" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4" for="EmailAddress">Email Address</label>
                        <div class="col-md-8">
                            <input class="form-control" id="EmailAddress" name="EmailAddress" value="@ViewBag.EmailAddress" placeholder="Enter EmailAddress" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4" for="CompanyId">Company</label>
                        <div class="col-md-8">
                            <select class="form-control" id="CompanyId" name="CompanyId" data-bind="options: companies, optionsText: 'Name', optionsValue: 'Id', optionsCaption: ' -- all --', value: selectedCompany"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4" for="AccountTypeId">Account Type</label>
                        <div class="col-md-8">
                            <select class="form-control" id="AccountTypeId" name="AccountTypeId" data-bind="options: accounttypes, optionsText: 'Name', optionsValue: 'Id', optionsCaption: ' -- all --', value: selectedAccountType"></select>
                        </div>
                    </div>
                    
                </div>
                <div class="modal-footer">
                    <span class="spinner"><i class="fa fa-refresh fa-spin"></i></span>
                    <button id="btnSaveFilter" type="button" class="btn btn-default">Save Filter</button>
                    <a class="btn btn-warning" href="#reset" data-bind="click: resetFilters">Reset</a>
                    <button type="button" class="btn btn-primary" data-bind="click: applyFilters">Apply Filter</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            }

        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>

