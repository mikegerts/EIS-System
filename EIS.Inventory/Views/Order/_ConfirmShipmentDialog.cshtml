
<div style="display:none;" class="modal fade" id="ConfirmShipmentDialog" role="dialog" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Shipment Details</h4>
            </div>
            <div class="modal-body" data-bind="with: orderShipment">
                <div id="loadingModal" style="display:none" class="loading-gif"></div>
                <div data-bind="visible: $root.message(), alert: { message: $root.message, type: $root.type, template: 'alertTemplate' }"></div>
                <div class="row">
                    <div class="col-xs-12">
                        <div class="box box-solid">
                            <div class="box-header">
                                <h3 class="box-title" data-bind="text: Marketplace, css: 'bg-image-' + Marketplace()"></h3>
                                <strong class="pull-right" data-bind="text: OrderId"></strong>
                            </div>
                            <div class="box-body">
                                <div>
                                    <div class="form-horizontal" id="edit-form">

                                        <div class=" form-group">
                                            <label class="control-label col-xs-4" for="ShipDate">Ship Date</label>
                                            <div class="col-xs-8">
                                                <div class="input-group bootstrap-timepicker">
                                                    <input class="form-control text-box" id="ShipDate" name="ShipDate" data-bind="datepicker: ShipDate, datepickerOptions: { 'format': 'DD, MM dd, yyyy', autoclose: true }, event: { change: valueChanged }" placeholder="Enter ship date" required="required" />
                                                    <label class="input-group-addon" for="ShipDate">
                                                        <i class="fa fa-calendar"></i>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-xs-4" for="CarrierCode">Carrier</label>
                                            <div class="col-xs-8">
                                                <select id="CarrierCode" name="CarrierCode" class="form-control" data-bind="options: $parent.carriers, optionsValue: 'Code', optionsText: 'Name', optionsCaption: '-- choose carrier --', value: CarrierCode, event: { change: valueChanged }" required="required"></select>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-xs-4" for="ShippingMethod">Shipping Service</label>
                                            <div class="col-xs-8">
                                                <input id="ShippingMethod" name="ShippingMethod" type="text" class="form-control" placeholder="Enter shipping service method" data-bind="value: ShippingMethod, event: { change: valueChanged }" required="requuired" />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-xs-4" for="ShipperTrackingNumber">Tracking ID</label>
                                            <div class="col-xs-8">
                                                <input id="ShipperTrackingNumber" name="ShipperTrackingNumber" type="text" class="form-control" placeholder="Enter tracking control number" data-bind="value: ShipperTrackingNumber, event: { change: valueChanged }" required="required" />
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <span class="spinner"><i class="fa fa-refresh fa-spin"></i></span>
                <button id="btnConfirmShipment" type="button" class="btn btn-primary" data-bind="click: confirmOrderShipment">Confirm Shipment</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /#ConfirmShipmentDialog -->
